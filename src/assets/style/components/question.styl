.question-container
	display: flex
	flex-direction: column
	align-items: center
	.question
		width: 70%
	.q-counter
		font-family: FolhaTexto, Folha Texto, serif
		font-weight: bold
		span
			&:first-child
				font-size: 1.7em
				color: $color
	.q-title
		margin-left: 20px

.buttons
	position: relative
	margin: 50px 0
	font-weight: bold
	width: 100%
	font-family: FolhaGrafico, 'Folha Grafico', sans-serif
	.button-inside
		display: flex
		justify-content: space-around
		label
			color: $color
			background-color: white
			border: 1px solid $color
			padding: 10px 15px
			border-radius: 5px
			width: 100%
			text-align: center
			&:first-child
				margin: 0 20px 0 0
			&:last-child
				margin: 0 0 0 20px
			&.checked
				background-color: $color
				color: white
			input
				display: none
			&:hover
				color: #333
				border-color: #333

