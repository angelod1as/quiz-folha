$border = rgba($lgray, .3)

body
	width: 100%

h1
	font-weight: bold
	margin-bottom: 20px
	font-size: 1.3em

h2
	margin-bottom: 10px
	font-weight: bold

b
	font-weight: bold

img
	width: 100%
	height: auto

.description
	margin: 20px 0 30px 0
	border-bottom: 1px solid $border
	padding-bottom: 20px


.button
	position: relative
	margin: 50px 0
	.button-inside
		display: flex
		justify-content: space-around
		label
			background-color: white
			border: 1px solid $blue
			padding: 10px 15px
			border-radius: 5px
			&.checked
				background-color: lighten($lblue, 75%)
			input
				display: none
