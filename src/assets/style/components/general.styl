$lblue = red
$blue= #0078A4
$lblue = #4CA5C5
$red =  #E51717
$gray = #333333
$yellow =  #F3BD00
$green = #93c9a8


body
	width: 100%

h1
	font-weight: bold
	margin-bottom: 20px
	font-size: 1.3em

h2
	margin-bottom: 10px


.range
	position: relative
	margin: 50px 0
	.bgline
		z-index: -1
		border-bottom: 1px solid $lblue
		position: absolute
		top: 50%
		left: 0
		width: 100%
	.range-inside
		z-index: 10
		display: flex
		justify-content: space-around
		label
			background-color: white
			border: 1px solid $blue
			padding: 15px 25px
			border-radius: 50%
			&.checked
				background-color: lighten($lblue, 75%)
			input
				display: none
