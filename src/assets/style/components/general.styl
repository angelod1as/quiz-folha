$border = rgba($lgray, .3)

body
	width: 100%

h1
	font-weight: bold
	margin-bottom: 20px
	font-size: 1.3em

h2
	margin-bottom: 10px
	font-weight: bold

b
	font-weight: bold

img
	width: 100%
	height: auto

.description
	margin: 20px 0 30px 0
	border-bottom: 1px solid $border
	padding-bottom: 20px


.range
	position: relative
	margin: 50px 0
	.bgline
		z-index: -1
		border-bottom: 1px solid $lblue
		position: absolute
		top: 50%
		left: 0
		width: 100%
	.range-inside
		z-index: 10
		display: flex
		justify-content: space-around
		label
			background-color: white
			border: 1px solid $blue
			padding: 15px 25px
			border-radius: 50%
			&.checked
				background-color: lighten($lblue, 75%)
			input
				display: none
